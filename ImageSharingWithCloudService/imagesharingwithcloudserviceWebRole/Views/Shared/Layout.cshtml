<!DOCTYPE html>

<html lang="en">
<head id="head">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    <title> @ViewBag.Title </title>

    @*
    @Styles.Render("~/Content/css")
    *@

    @{ 
        var SiteCss = ViewBag.isAda ? "Site_ADA.css" : "Site.css";
        var SiteCssUrl = Url.Content("~/Content/" + SiteCss); 
    }
    <link href="@SiteCssUrl" rel="stylesheet" type="text/css" />

    @*
    @Scripts.Render("~/bundles/modernizr")
    *@

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")"></script>
</head>

<body class="twoColumnHdrFtr">
    <div id="container">
        <header id="header">
            <h1><img alt="[Jive Talkin' Choirboy]" src="@Url.Content("~/Images/jive-talkin-choirboy.png")" /></h1>
        </header>
        
        <nav id="nav">
            <ul>
                <li>@Html.ActionLink("Register","Register", "Account")</li>
                <li>@Html.ActionLink("Login", "Login", "Account")</li>
                <li>@Html.ActionLink("Upload", "Upload", "Images")</li>
                 <li>@Html.ActionLink("List All", "ListAll", "Images")</li>
                 <li>@Html.ActionLink("List by User", "ListByUser", "Images")</li>
                <li>@Html.ActionLink("List by Tag", "ListByTag", "Images")</li>
                <li>@Html.ActionLink("Query", "Query", "Images")</li>
                <li>@Html.ActionLink("InfoCenter", "InfoCenter", "Images")</li>
                <li>@Html.ActionLink("Approve", "Approve", "Images")</li>
                <li>@Html.ActionLink("Deactivate", "Deactivate", "Account")</li>
                 <li>@Html.ActionLink("ImageViews", "ImageViews", "Account")</li>

            </ul>
        </nav>
        
        <aside id="sidebar">
            <h1>Links</h1>
            <p>@Html.ActionLink("Home","Index", "Home")</p>
            <p><a href="http://www.stevens.edu">Stevens home page</a></p>
        </aside>
        <article id="content">
            @RenderBody()
        </article>
        <footer id="footer">
             <p>&copy; @DateTime.Now.Year Your Name Here</p>
        </footer>
    </div>

</body>
</html>
